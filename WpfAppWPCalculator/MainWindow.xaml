<Window x:Class="WpfAppWPCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторные работы" Height="925" Width="800"
    ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стиль кнопки "Рассчитать" -->
        <Style x:Key="CalculateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A5D6A7"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль кнопки "Очистить" -->
        <Style x:Key="ClearButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#90CAF9"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="293*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Grid.ColumnSpan="2">
            <!-- 
            <TabItem Header="ЛР1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="73*"/>
                        <ColumnDefinition Width="701*"/>
                    </Grid.ColumnDefinitions>

                </Grid>

            </TabItem>
                        -->
            <!-- Вторая вкладка -->
            <TabItem Header="ЛР2/wpCalc">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <!-- Заголовок и описание -->
                        <TextBlock Text="Движок слабейшего предусловия" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,20"/>

                        <!-- Выбор операции по сюжету -->
                        <GroupBox Header="Выбор операции по сюжету" Margin="0,0,0,15">
                            <StackPanel Margin="5">
                                <RadioButton x:Name="rbScenario1" 
                                               Content="Нахождение площади квадрата" 
                                               Margin="5" 
                                               GroupName="ScenarioGroup"
                                               Checked="Operation_Checked"/>
                                <RadioButton x:Name="rbScenario2" 
                                               Content="Вычисление площади круга" 
                                               Margin="5" 
                                               GroupName="ScenarioGroup"
                                               Checked="Operation_Checked"/>
                                <RadioButton x:Name="rbScenario3" 
                                               Content="Вычисление гипотенузы" 
                                               Margin="5" 
                                               GroupName="ScenarioGroup"
                                               Checked="Operation_Checked"/>
                                <!-- Добавить больше операций по необходимости -->
                            </StackPanel>
                        </GroupBox>

                        <!-- Сспособ редактирования постусловия -->
                        <GroupBox Header="Выбор способа редактирования постусловия" Margin="0,0,0,15" Height="109">
                            <StackPanel Margin="5">
                                <RadioButton x:Name="rbAssignment" 
                                               Content="Присвоение" 
                                               Margin="5" 
                                               GroupName="PostconditionGroup"
                                               Checked="Postcondition_Checked"/>
                                <RadioButton x:Name="rbBranching" 
                                               Content="Ветвление" 
                                               Margin="5" 
                                               GroupName="PostconditionGroup"
                                               Checked="Postcondition_Checked"/>
                                <RadioButton x:Name="rbSequence" 
                                               Content="Последовательность" 
                                               Margin="5" 
                                               GroupName="PostconditionGroup"
                                               Checked="Postcondition_Checked"/>
                            </StackPanel>
                        </GroupBox>
                        <!-- Область условий (всегда видима) -->
                        <GroupBox x:Name="gbConditions" 
          Header="Условия оператора" 
          Margin="0,0,0,15" 
          Visibility="Visible">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Заголовки -->
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                   Text="Предусловия" 
                   Margin="0,5" 
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="4" 
                   Text="Постусловия" 
                   Margin="0,5" 
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>




                                <!-- Новые условия (первая строка) -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
           Text="Новое:" 
           Margin="5,5,10,5" 
           VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" 
         x:Name="tbNewPrecondition" 
         Margin="0,5" 
         Height="35"
         TextWrapping="Wrap"
         AcceptsReturn="True"
         VerticalScrollBarVisibility="Auto"
         Text=""
         IsReadOnly="True"/>

                                <TextBlock Grid.Row="1" Grid.Column="3" 
           Text="Новое:" 
           Margin="5,5,10,5" 
           VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="4" 
         x:Name="tbNewPostcondition" 
         Margin="0,5" 
         Height="35"
         TextWrapping="Wrap"
         AcceptsReturn="True"
         VerticalScrollBarVisibility="Auto"
         Text=""/>

                                <!-- Старые условия (вторая строка) -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
           Text="Старое:" 
           Margin="5,5,10,5" 
           VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" 
         x:Name="tbOldPrecondition" 
         Margin="0,5" 
         Height="35"
         TextWrapping="Wrap"
         AcceptsReturn="True"
         VerticalScrollBarVisibility="Auto"
         IsReadOnly="True"/>

                                <TextBlock Grid.Row="2" Grid.Column="3" 
           Text="Старое:" 
           Margin="5,5,10,5" 
           VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="4" 
         x:Name="tbOldPostcondition" 
         Margin="0,5" 
         Height="35"
         TextWrapping="Wrap"
         AcceptsReturn="True"
         VerticalScrollBarVisibility="Auto"
         IsReadOnly="True"/>
                            </Grid>
                        </GroupBox>


                        <!-- Кнопки управления и дополнительные элементы -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <!-- Левая часть: пошаговый трейс -->
                            <StackPanel Width="409" Margin="0,0,20,0">
                                <TextBlock Text="Пошаговый трейс" 
                   FontWeight="Bold" 
                   Margin="0,0,0,5"/>
                                <ListBox x:Name="lbTrace" 
                 Height="248"
                 Margin="0,0,0,10"/>


                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Рассчитать wp" 
                    x:Name="btnCalculate" 
                    Margin="5" 
                    Padding="15,5"
                    Style="{StaticResource CalculateButtonStyle}"
                    Click="BtnCalculate_Click"
                    IsEnabled="False"/>
                                    <Button Content="Очистить" 
                    x:Name="btnClear" 
                    Margin="5" 
                    Padding="15,5"
                    Style="{StaticResource ClearButtonStyle}"
                    Click="BtnClear_Click"/>
                                </StackPanel>

                                <!-- Надписи и кнопка под кнопками -->
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="wp:" 
                       VerticalAlignment="Center" 
                       Margin="5,0,5,0"
                       FontWeight="Bold"/>
                                </StackPanel>
                                <TextBlock x:Name="tbWpResult" 
                       VerticalAlignment="Center" 
                       Margin="5,0,20,0"/>
                                <Button Content="Триада Хоара" 
                    x:Name="btnHoareTriad" 
                    Padding="10,5"
                    Click="BtnHoareTriad_Click"/>
                            </StackPanel>

                            <!-- Правая часть: кнопки и надписи -->
                        </StackPanel>

                        <!-- Текстбокс для триады Хоара под листбоксом -->
                        <TextBlock Text="Триада Хоара:" 
  FontWeight="Bold" 
  Margin="0,0,0,5"/>
                        <TextBox x:Name="tbHoareTriad" 
Height="31"
TextWrapping="Wrap"
AcceptsReturn="True"
VerticalScrollBarVisibility="Auto"
IsReadOnly="True"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>