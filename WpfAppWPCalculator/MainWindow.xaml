<Window x:Class="WpfAppWPCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторные работы" Height="710" Width="800">
    <Window.Resources>
        <!-- Стиль кнопки "Рассчитать" -->
        <Style x:Key="CalculateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A5D6A7"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль кнопки "Очистить" -->
        <Style x:Key="ClearButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#90CAF9"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <!-- Первая вкладка -->
            <TabItem Header="ЛР1">
                <Grid>

                </Grid>
            </TabItem>
            <!-- Вторая вкладка -->
            <TabItem Header="ЛР2/wpCalc">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <!-- Заголовок и описание -->
                        <TextBlock Text="Движок слабейшего предусловия" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,20"/>

                        <!-- Выбор операции по сюжету -->
                        <GroupBox Header="Выбор операции по сюжету" Margin="0,0,0,15">
                            <StackPanel Margin="5">
                                <RadioButton x:Name="rbScenario1" 
                                               Content="Операция 1" 
                                               Margin="5" 
                                               GroupName="ScenarioGroup"
                                               Checked="Operation_Checked"/>
                                <RadioButton x:Name="rbScenario2" 
                                               Content="Операция 2" 
                                               Margin="5" 
                                               GroupName="ScenarioGroup"
                                               Checked="Operation_Checked"/>
                                <!-- Добавить больше операций по необходимости -->
                            </StackPanel>
                        </GroupBox>

                        <!-- Сспособ редактирования постусловия -->
                        <GroupBox Header="Выбор способа редактирования постусловия" Margin="0,0,0,15">
                            <StackPanel Margin="5">
                                <RadioButton x:Name="rbAssignment" 
                                               Content="Присвоение" 
                                               Margin="5" 
                                               GroupName="PostconditionGroup"
                                               Checked="Postcondition_Checked"/>
                                <RadioButton x:Name="rbBranching" 
                                               Content="Ветвление" 
                                               Margin="5" 
                                               GroupName="PostconditionGroup"
                                               Checked="Postcondition_Checked"/>
                                <RadioButton x:Name="rbSequence" 
                                               Content="Последовательность" 
                                               Margin="5" 
                                               GroupName="PostconditionGroup"
                                               Checked="Postcondition_Checked"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Область условий (появляется после выбора) -->
                        <GroupBox x:Name="gbConditions" 
                                    Header="Условия оператора" 
                                    Margin="0,0,0,15" 
                                    Visibility="Collapsed">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Информация о выбранном операторе -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                             Text="Выбранный оператор:" 
                                             Margin="0,5" 
                                             VerticalAlignment="Center"
                                             FontWeight="Bold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                             x:Name="tbSelectedOperator"
                                             Margin="5" 
                                             VerticalAlignment="Center"
                                             FontWeight="Bold"/>

                                <!-- Старое предусловие -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                             Text="Старое предусловие:" 
                                             Margin="0,5" 
                                             VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" 
                                           x:Name="tbOldPrecondition" 
                                           Margin="5" 
                                           Height="35"
                                           TextWrapping="Wrap"
                                           AcceptsReturn="True"
                                           VerticalScrollBarVisibility="Auto"
                                           IsReadOnly="True"/>

                                <!-- Старое постусловие -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                                 Text="Старое постусловие:" 
                                                 Margin="0,5" 
                                                 VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" 
                                               x:Name="tbOldPostcondition" 
                                               Margin="5" 
                                               Height="35"
                                               TextWrapping="Wrap"
                                               AcceptsReturn="True"
                                               VerticalScrollBarVisibility="Auto"
                                               IsReadOnly="True"/>

                                <!-- Новое предусловие -->
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                             Text="Новое предусловие:" 
                                             Margin="0,5" 
                                             VerticalAlignment="Center"/>
                                <TextBox Grid.Row="3" Grid.Column="1" 
                                               x:Name="tbNewPrecondition" 
                                               Margin="5" 
                                               Height="35"
                                               TextWrapping="Wrap"
                                               AcceptsReturn="True"
                                               VerticalScrollBarVisibility="Auto"
                                               Text=""/>

                                <!-- Новое постусловие -->
                                <TextBlock Grid.Row="4" Grid.Column="0" 
                                             Text="Новое постусловие:" 
                                             Margin="0,5" 
                                             VerticalAlignment="Center"/>
                                <TextBox Grid.Row="4" Grid.Column="1" 
                                           x:Name="tbNewPostcondition" 
                                           Margin="5" 
                                           Height="35"
                                           TextWrapping="Wrap"
                                           AcceptsReturn="True"
                                           VerticalScrollBarVisibility="Auto"
                                           Text=""/>
                            </Grid>
                        </GroupBox>

                        <!-- Кнопки управления -->
                        <StackPanel Orientation="Horizontal" 
                                          HorizontalAlignment="Right" 
                                          Margin="0,10,0,0">
                            <Button Content="Рассчитать" 
                                          x:Name="btnCalculate" 
                                          Margin="5" 
                                          Padding="15,5"
                                          Style="{StaticResource CalculateButtonStyle}"
                                          Click="BtnCalculate_Click"
                                          IsEnabled="False"/>
                            <Button Content="Очистить" 
                                          x:Name="btnClear" 
                                          Margin="5" 
                                          Padding="15,5"
                                          Style="{StaticResource ClearButtonStyle}"
                                          Click="BtnClear_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>